@model MeetingInfo;



@{
    Layout ="_Layout2";
}

<main class="text-center">


<h1>Saat :  @ViewBag.hours.@ViewBag.minute </h1>
<h2>Toplantı katılım durumunuzu bildiriniz</h2>

<div class="card my-2">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Location</li>
        <li class="list-group-item">@Model.Date.ToString("dd/MM/yyyy  HH:mm:ss")</li>
        <li class="list-group-item">@Model.NumberOfPeople katılan var</li>

    </ul>
</div>




<a class ="btn btn-sm btn-outline-primary"  href="/meeting/apply"  >  Başvuru Yap </a>
    
</main>